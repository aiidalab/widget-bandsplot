{
    "$id": "https://example.com/pdos",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "JSON Schema for an PDOS entry",
    "type": "object",
    "required": [],
    "properties": {
        "fermi_energy": {"type": "number"}
    },
    "patternProperties": {
      "^(?!fermi_energy)([^/.*#]+)$": {
        "type": "object",
        "required": ["label", "x", "y"],
        "properties": {
            "label": {"type": "string"},
            "x": {
                "type": "array",
                "items": {"type": "number"}
            },
            "y": {
                "type": "array",
                "items": {"type": "number"}
            },
            "lineStyle": {"enum": ["solid", "dash"]},
            "borderColor": {"type": "string"},
            "backgroundColor": {"type": "string"}
        }
      }
    },
    "additionalProperties": false
}
